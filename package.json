{
  "name": "@oceanprotocol/pleuston",
  "version": "0.5.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/oceanprotocol/pleuston"
  },
  "scripts": {
    "start": "react-scripts --max_old_space_size=4096 start",
    "build": "react-scripts --max_old_space_size=4096 build",
    "lint:js": "eslint ./src/",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint": "run-p --continue-on-error lint:js lint:css",
    "format:js": "prettier --write 'src/**/*.{js,jsx}'",
    "format:css": "prettier-stylelint --write --quiet 'src/**/*.{css,scss}'",
    "format": "run-p format:js format:css",
    "test": "npm run lint && react-scripts test --coverage --watchAll=false",
    "test:watch": "npm run lint && react-scripts test --coverage",
    "coverage": "cat ./coverage/lcov.info | codacy-coverage",
    "release": "release-it --non-interactive",
    "changelog": "auto-changelog -p"
  },
  "engines": {
    "node": ">=8 <12"
  },
  "dependencies": {
    "@oceanprotocol/art": "^2.2.0",
    "@oceanprotocol/squid": "^0.6.5",
    "@oceanprotocol/typographies": "^0.1.0",
    "aws-amplify": "^1.1.32",
    "aws-amplify-react": "^2.3.11",
    "azure-storage": "^2.10.3",
    "connected-react-router": "^6.5.2",
    "ethereum-blockies": "github:MyEtherWallet/blockies",
    "is-url": "^1.2.4",
    "jsonwebtoken": "^8.5.1",
    "prop-types": "^15.7.2",
    "query-string": "^6.8.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-modal": "^3.9.1",
    "react-oauth-flow": "^1.2.0",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "react-select": "^3.0.4",
    "react-transition-group": "^4.2.1",
    "react-truncate": "^2.4.0",
    "react-web3-provider": "^1.1.2",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "redux-form": "^8.2.4",
    "redux-thunk": "^2.3.0",
    "web3": "^1.2.0"
  },
  "devDependencies": {
    "@release-it/bumper": "^1.0.3",
    "auto-changelog": "^1.13.0",
    "codacy-coverage": "^3.4.0",
    "eslint": "^5.16.0",
    "eslint-config-oceanprotocol": "^1.3.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-stylelint": "^0.4.2",
    "release-it": "^12.3.4",
    "stylelint": "^10.1.0",
    "stylelint-config-bigchaindb": "^1.2.2",
    "stylelint-config-css-modules": "^1.4.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "browserslist": {
    "development": [
      "last 1 versions"
    ],
    "production": [
      ">1%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}",
      "!src/mock/**/*.{js,jsx,mjs}",
      "!src/lib/**/*.{js,jsx,mjs}",
      "!src/serviceWorker.js"
    ]
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run changelog"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "package.json",
          "package-lock.json"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
